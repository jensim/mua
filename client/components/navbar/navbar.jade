div.navbar.navbar-inverse.navbar-static-top(ng-controller='NavbarCtrl')
  div.container
    div.navbar-header
      button.navbar-toggle(type='button', ng-click='isCollapsed = !isCollapsed')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') Mutant

    div#navbar-main.navbar-collapse.collapse(uib-collapse='isCollapsed')
      ul.nav.navbar-nav
        li(ng-repeat='item in menu', ng-class='{"active": isActive(item.link), "disabled": item.disabled}')
          a(ng-href='{{item.link}}') {{item.title}}
